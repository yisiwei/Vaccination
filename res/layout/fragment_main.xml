<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4BB79F" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg_shen" >

        <cn.mointe.vaccination.view.CircleImageView
            android:id="@+id/main_baby_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/default_img" />

        <TextView
            android:id="@+id/main_baby_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="45dp"
            android:layout_toLeftOf="@id/main_baby_image"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/main_baby_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="45dp"
            android:layout_toRightOf="@id/main_baby_image"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/main_remind_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_baby_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/main_remind_hint"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <RelativeLayout
            android:id="@+id/main_layout_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_remind_hint"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/day_textview"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/main_remind_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-20dp"
                android:gravity="center_horizontal"
                android:includeFontPadding="false"
                android:maxHeight="142dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="140sp" />

            <TextView
                android:id="@+id/main_day_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/main_remind_count"
                android:layout_alignBottom="@id/main_remind_count"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/main_remind_count"
                android:text="@string/day"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>

        <ListView
            android:id="@+id/main_vaccine_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/main_layout_num"
            android:cacheColorHint="#00000000"
            android:divider="#55aaceb2"
            android:dividerHeight="2dp"
            android:fadingEdge="none"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp" />

        <Button
            android:id="@+id/button1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Button" />

    </RelativeLayout>
    
     <RelativeLayout
        android:id="@+id/main_option_level1"
        android:layout_width="70dp"
        android:layout_height="36dp"
        android:layout_gravity="bottom|center_horizontal" >

        <ImageButton
            android:id="@+id/main_option_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2dp"
            android:background="@drawable/actionbar_add_icon"
            android:contentDescription="@string/image_content" />
    </RelativeLayout>

    <!-- <ImageButton
        android:id="@+id/main_vaccine_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="-5dp"
        android:contentDescription="@string/image_content"
        android:visibility="gone"
        android:src="@drawable/actionbar_add_icon" /> -->

</FrameLayout>