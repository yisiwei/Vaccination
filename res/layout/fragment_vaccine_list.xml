<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/wea_today_img"
        android:layout_toRightOf="@+id/wea_today_img"
        android:text="3月龄" />

    <ImageView
        android:id="@+id/wea_today_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/vaccination_item_tv_age2"
        android:src="@drawable/ic_launcher" />

    <Button
        android:id="@+id/find_next_vaccination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView2"
        android:text="距离下次接种时间还有10天" />

    <TextView
        android:id="@+id/vaccination_item_tv_age2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:layout_toRightOf="@+id/wea_today_img"
        android:text="昵称" />

    <Button
        android:id="@+id/btn_load_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignParentRight="true"
        android:text="查看未来3天天气" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_load_weather"
        android:layout_toLeftOf="@+id/btn_load_weather"
        android:text="1℃/5℃" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/vaccination_item_tv_age2"
        android:layout_alignRight="@+id/textView3"
        android:src="@drawable/ic_launcher" />

    <ListView
        android:id="@+id/vaccine_list_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/find_next_vaccination"
        android:layout_marginTop="10dp" >
    </ListView>

</RelativeLayout>