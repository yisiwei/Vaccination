<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/actionbar_bg" >

    <ImageView
        android:id="@+id/title_left_imgbtn_back"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/image_content"
        android:src="@drawable/actionbar_back_icon" />

    <ImageButton
        android:id="@+id/title_left_imgbtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="-5dp"
        android:padding="3dp"
        android:layout_toRightOf="@id/title_left_imgbtn_back"
        android:background="@drawable/actionbar_icon"
        android:contentDescription="@string/image_content" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/title_right_imgbtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/actionbar_more_icon"
        android:background="@drawable/title_right_imgbtn"
        android:contentDescription="@string/image_content" />

</RelativeLayout>